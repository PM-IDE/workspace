services:
  ficus_backend:
    container_name: ficus_backend
    build:
      context: ../../../
      dockerfile: "./Ficus/docker/run/Run.FicusBackend.Dockerfile"
    expose:
      - 8080
    ports:
      - "8080:8080"
    networks:
      - local
    volumes:
      - shared_volume:/tmp

  python_tests:
    container_name: python_tests
    environment:
      - FICUS_BACKEND_ADDR=ficus_backend:8080
    build:
      context: ../../../
      dockerfile: "./Ficus/docker/tests/Tests.Python.Dockerfile"
    networks:
      - local
    volumes:
      - shared_volume:/tmp
    depends_on:
      - ficus_backend

volumes:
  shared_volume: {}

networks:
  local:
    driver: bridge